<%= render SubnavBarComponent.new do |component| %>
  <% component.with_share_bar do %>
    <%= render ShareBarComponent.new(mode: :solution_list, comparison: current_comparison) %>
  <% end %>
<% end %>
<div class="l-back-container">
  <div>
    <%= turbo_frame_tag("solutions-index") do %>
      <section class="l-container">
        <div class="l-container__inner pb-[7.5rem] pt-8">
          <header>
            <h1 class="text-balance text-h3 sm:text-h2 l-max-inline-size-none">Infra Finder: Discover open infrastructures that meet your needs</h1>
          </header>
          <div class="pt-6 sm:pt-9 grid grid-cols-1 mobile:grid-cols-solutions-page gap-4">
            <%= turbo_frame_tag "solution-filters" do %>
              <%= render SolutionFiltersComponent.new(solution_search: @solution_search) %>
            <% end %>

            <%= render SolutionsComponent.new(solutions: @solutions, solution_search: @solution_search, comparison: current_comparison) %>
          </div>
        </div>
      </section>
    <% end %>
    <%= turbo_frame_tag("comparison-bar") do %>
      <% if current_comparison.present? %>
        <%= render ComparisonBarComponent.new(comparison: current_comparison) %>
      <% end %>
    <% end %>
  </div>
  <%= render BackToTopComponent.new %>
</div>
