<%= turbo_frame_tag(solution, :details) do %>
  <section data-controller="solution-details-component--solution-details-component" class="l-container">
    <div class="l-container__inner py-[3.75rem]">
      <div class="pt-6 space-y-5">
        <h1><%= solution.name %></h1>
        <div class="text-lg font-semibold">
          <%= solution.organization.name %>
        </div>
        <%= render_location %>
        <div class="a-underline"></div>
        <div class="pt-[1.625rem]">
          <% if solution.website? %>
            <a href="<%= solution.website %>" class="m-button bg-brand-mint">
              <span><%= t(".website") %></span>
              <%= image_tag "icons/24/Link-External.svg", alt: "", class: "-ms-1" %>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>
