<div data-controller="subnav-bar-component--subnav-bar-component" class="l-container print:hidden <%= class_name %>">
  <div class="l-container__inner pt-8 flex flex-wrap gap-3 justify-between">
    <div class="grow max-w-[44rem]">
      <% if show_back %>
        <%= link_to_back do %>
          <%= image_tag "icons/16/Arrow-Left-Wide.svg", alt: "", class: "-ms-1" %>
          <span><%= t(".back") %></span>
        <% end %>
      <% elsif show_welcome_notice %>
          <%= render_welcome_notice %>
      <% end %>
    </div>
    <div>
      <%= turbo_frame_tag("share-bar") do %>
        <%= share_bar %>
      <% end %>
    </div>
  </div>
</div>
