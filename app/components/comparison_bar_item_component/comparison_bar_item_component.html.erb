<%= turbo_frame_tag(item, "bar") do %>
  <div
    data-controller="comparison-item-component--comparison-item-component"
    class="m-comparison-bar-item bg-brand-mint min-w-[14rem] h-full sm:min-w-auto">
    <div class="line-clamp-2 text-h6"><%= solution.name %></div>
    <div class="m-comparison-bar-item__close">
      <%= link_to(solution_compare_path(solution), link_to_remove_options) do %>
        <%= image_tag "icons/20/Close.svg", alt: "" %>
        <span class="sr-only"><%= t(".remove") %></span>
      <% end %>
    </div>
  </div>
<% end %>
