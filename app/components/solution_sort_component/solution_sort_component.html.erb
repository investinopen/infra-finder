<%= turbo_frame_tag("solution-sorts") do %>
  <%= search_form_for solution_search, **search_form_options do |f| %>
    <div class="solutions-sort bg-neutral-20 print:hidden">
      <%= f.label :s, class: "font-normal" do %>
        <span class="hidden sm:block"><%= t(".sort_label") %></span>
        <span class="block sm:hidden"><%= t(".sort_mobile_label") %></span>
      <% end %>
      <%= f.select :s do %>
        <%= solution_sort_option :updated_at, dir: :desc %>
        <%= solution_sort_option :name %>
        <%= solution_sort_option :name, dir: :desc %>
      <% end %>
    </div>
  <% end %>
<% end %>
